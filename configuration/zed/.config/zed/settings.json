// Zed settings
// https://zed.dev/docs/configuring-zed
{
  "show_edit_predictions": true,
  "hover_popover_delay": 200,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "icon_theme": "Material Icon Theme",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "use_modifier_to_send": true,
    "enable_feedback": false,
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-thinking-latest"
    },
    "model_parameters": []
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "format_on_save": "off",
  "theme": "Gruvbox Dark Hard",
  "terminal": {
    "font_family": "MesloLGL Nerd Font Mono",
    "line_height": "standard"
  },
  "buffer_font_size": 15,
  "tab_size": 2,
  "ui_font_size": 15,
  "wrap_guides": [80, 120],
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop"]
    }
  },
  "lsp": {
    "pony-language-server": {
      "settings": {
        "pony_stdlib_path": "/opt/homebrew/Cellar/ponyc/0.60.4/packages"
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      }
    }
  }
}
